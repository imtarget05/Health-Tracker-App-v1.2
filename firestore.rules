rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // users collection: only the authenticated owner may read/write their doc
    match /users/{userId} {
      // Allow the authenticated user to read and write their own user document.
      // Creation is allowed as long as the request is authenticated and the
      // auth UID matches the path userId (no requirement for a uid field in
      // the client-provided payload).
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      // Prevent client deletions
      allow delete: if false;
    }

    // Allow each authenticated user to manage their own diaries subcollection.
    // This permits creating/updating diary documents under users/{userId}/diaries/*
    // only when the request is authenticated and the auth uid matches the path userId.
    match /users/{userId}/diaries/{diaryId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny other client access by default
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
