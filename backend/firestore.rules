rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }
    function isAdmin() { return isSignedIn() && request.auth.token.admin == true; }

    // profiles collection (per-user)
    match /profiles/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      // meals subcollection
      match /meals/{mealId} {
        allow create: if isOwner(userId);
        allow read: if isOwner(userId) || isAdmin();
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId) || isAdmin();
      }

      // daily summaries
      match /dailySummaries/{dayId} {
        allow read: if isOwner(userId) || isAdmin();
        // allow CF/server to write or owner to update
        allow create, update: if isOwner(userId) || isAdmin();
      }
    }

    // Top-level meals (back-compat) - only owner or admin
    match /meals/{mealId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid || isAdmin();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid || isAdmin();
    }

    // waterLogs
    match /waterLogs/{docId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid || isAdmin();
    }

    // deviceTokens: user may create their own, admin can manage
    match /deviceTokens/{tokenId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid) || isAdmin();
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid) || isAdmin();
    }

    // notifications: created by server or admin; users can read their own
    match /notifications/{nid} {
      allow create: if isAdmin() || isSignedIn();
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow delete: if isAdmin();
    }

    // aiImages and foodDetections
    match /aiImages/{imgId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    match /foodDetections/{detId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    // dailySummaries top-level copy for analytics
    match /dailySummaries/{docId} {
      allow create: if isAdmin() || isSignedIn();
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid || isAdmin();
      allow update, delete: if isAdmin();
    }

    // Fallback: deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
